<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red">
        <ImageView
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@drawable/food_placeholder"
            android:contentDescription="@string/recipe_placeholder"
            android:id="@+id/recipe_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/recipetextsize"
            android:text="@string/recipe"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/left_m_recipe_text"
            android:layout_marginStart="@dimen/left_m_recipe_text"
            android:layout_marginTop="@dimen/top_m_recipe_text"
            android:textColor="@color/green"
            android:id="@+id/recipe_text"/>
    </LinearLayout>

</android.support.v7.widget.CardView>